{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "offline",
                "start",
                "--environment",
                "integration"
            ],
            "env": {
                "AWS_REGION_CONF": "us-west-1",
                "IS_OFFLINE": "true",
                "NODE_ENV": "integration"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Trigger hello function",
            "sourceMaps": true,
            "trace": true,
            "runtimeVersion": "20",
            "runtimeArgs": [
                "--inspect"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/node_modules/.bin/serverless",
            "args": [
                "invoke",
                "local",
                "-f",
                "hello",
                "--path",
                "events/hello.json",
                "--stage",
                "development"
            ],
            // "runtimeArgs": ["--experimental-modules", "--experimental-json-modules"],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 4040
        }
    ]
}